<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <RollingFile name = "RollingFile" fileName="logs/app.log" filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout>
        <Pattern>%d %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n%throwable</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size = "20MB" />
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>
    <Console name = "Console" target="SYSTEM_OUT">
      <PatternLayout>
        <Pattern>%d %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n%throwable</Pattern>
      </PatternLayout>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="hynotice.api.presentation.controller.RssFeedController" level = "debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Logger>
    <Root level = "info" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>
